    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="display:flex;flex-direction:column;min-height: 100vh;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">Home</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item ">
            <a class="nav-link" href="/games">Games</a>
          </li>
          <li class="nav-item ">
            <a class="nav-link" href="/developers">Developers<span class="sr-only">(current)</span></a>
          </li>
        </ul>

        <%= form_with(url: search_games_path, method: :get, local: true, class: "form-inline my-2 my-lg-0") do |f| %>
          <div>
            <div>
              <%= text_field_tag(:keywords, nil, class: "form-control ", placeholder: "Search for Video Games") %>
              <%= submit_tag("Search", class: "btn btn-outline-success ") %>
            </div>
          </div>
        <% end %>

      </div>
    </nav>

    <section class="section">
      <div class="container">
        <%= yield %>
      </div>
    </section>

    <footer class="page-footer font-small blue pt-4 bg-light" style="flex: 0 0 50px;margin-top:auto;">
      <div class="container text-center text-md-left">
