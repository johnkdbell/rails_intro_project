<h1>Games</h1>

<%= form_with(url: search_games_path, method: :get, local: true) do |f| %>
  <%= f.label :category, for: @games %>
  <%= f.select :category, @search_genres, { include_blank: 'Please choose' }, { id: @games } %>
<% end %>


<div class="container">
</br>
  <div class="row">
    <div class="col-3">
      <h5>Name</h5>
    </div>
    <div class="col">
      <h5>Developer</h5>
    </div>
    <div class="col">
      <h5>Release Date</h5>
    </div>
    <div class="col">
      <h5>Rating</h5>
    </div>
  </div>
  <% @games.each do |game| %>
    <div class="row ml">
      <div class="col-3">
        <%= link_to game.name, game %>
      </div>
      <div class="col">
        <%= game.developer.name %>
      </div>
      <div class="col">
        <%= game.release_date %>
      </div>
      <div class="col">
        <%= game.rating %> from <%= game.total_rating %> individuals
      </div>
    </div>
    </br>
  <% end %>

  <div class="center">
    <%= paginate @games %>
  </div>
</div>