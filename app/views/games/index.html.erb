<h1>Games</h1>
<div class="container">
</br>
  <div class="row">
    <div class="col-3">
      <h5>Name</h5>
    </div>
    <div class="col">
      <h5>Developer</h5>
    </div>
    <div class="col">
      <h5>Release Date</h5>
    </div>
    <div class="col-4">
      <h5>Description</h5>
    </div>
    <div class="col">
      <h5>Rating</h5>
    </div>
  </div>
  <% @games.each do |game| %>
    <div class="row ml">
      <div class="col-3">
        <%= link_to game.name, game %>
      </div>
      <div class="col">
        <%= game.developer.name %>
      </div>
      <div class="col">
        <%= game.release_date %>
      </div>
      <div class="col-4">
        <%= game.description %>
      </div>
      <div class="col">
        <%= game.rating %> from <%= game.total_rating %> individuals
      </div>
    </div>
    </br>
  <% end %>
</div>